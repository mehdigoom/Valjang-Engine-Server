.server-header {
  border-bottom: 1px solid rgba(0,0,0,0.2);
  background: #fff;
  display: flex;
  align-items: center;

  .server-icon {
    width: 40px;
    height: 40px;
    border: 1px solid rgba(0,0,0,0.2);
    border-radius: 4px;
    margin: 0.5em;
    background: #eee;
  }

  .server-name {
    font-size: 2em;
    font-weight: bold;
    flex: 1;
  }

  .controls { align-self: flex-start; }
}

.server-footer {
  margin-bottom: 0.5em;
  text-align: center;
  opacity: 0.5;
  display: block;
  color: inherit;
  text-decoration: none;
  
  &:hover { opacity: 1; }
}

